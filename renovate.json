{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "enabledManagers": [
    "github-actions",
    "pep621",
    "pip_requirements",
    "custom.regex"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions"
    },
    {
      "matchManagers": [
        "pep621"
      ],
      "groupName": "python dependencies",
      "rangeStrategy": "widen"
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "groupName": "python requirements",
      "rangeStrategy": "widen"
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchDepNames": [
        "python"
      ],
      "groupName": "python runtime"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/workflow\\.yml$/"
      ],
      "matchStrings": [
        "PYTHON_MAX:\\s*\"(?<currentValue>\\d+\\.\\d+)\"\\s*#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s+versioning=(?<versioning>\\S+)"
      ]
    }
  ]
}
